<h1>All articles</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |item|%>
            <tr>
                <td><%=item.title %> </td>
                <td><%=item.desc %></td>
                <td><%=item.user.username if item.user %></td>
                <td>
                    <%= link_to 'Show', article_path(item) %>
                    <%= link_to 'Edit', edit_article_path(item)%>
                    <%= link_to 'Delete', article_path(item), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}  %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>


<%= link_to 'Create', new_article_path %>