<%= render 'shared/error', obj: @article %>

<%= form_with(model: @article, local: true,data: {turbo: false}) do |form|  %>
    <%= form.label :title, "Title:" %>
    <br />
    <%= form.text_field :title %>
    <br />
    <%= form.label :desc, "Description:" %>
    <br />
    <%= form.text_area :desc %>
    <br />
    <%= form.label :category, "Categories:" %>
    <br />
    <%= form.collection_select :category_ids, Category.order(:name), :id, :name, {prompt: "Please select a Category"}, {multiple: true} %>
    <br />
    <br />

    <%= form.submit %>

<% end %>